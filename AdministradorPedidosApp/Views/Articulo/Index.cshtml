@model IEnumerable<AdministradorPedidosApp.Models.DTOs.ArticuloDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<input type="text" id="articulosSearchIndex" class="form-control" placeholder="Buscar Artículo..." />
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCreacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rubro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categorias)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="articulosIndexTableBody">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Articulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rubro.Nombre)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Precio.Precio)
            </td>
            <td>
                    @foreach(var categoria in item.Categorias)
                    {
                        <span>•@categoria.Nombre</span><br />
                    }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Articulo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_Articulo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_Articulo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section scripts{
    <script src="~/js/articulos/searchcategoriasinmodal.js"></script>
}