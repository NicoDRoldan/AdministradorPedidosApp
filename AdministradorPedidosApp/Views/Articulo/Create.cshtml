@model AdministradorPedidosApp.Models.ArticuloModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/cargarimagen.css" rel="stylesheet" />
<link href="~/css/modalselectcategoriasarticulos.css" rel="stylesheet" />

<h1>Create</h1>

<h4>ArticuloModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Activo" /> @Html.DisplayNameFor(model => model.Activo)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Id_Rubro" class="control-label"></label>
                <select asp-for="Id_Rubro" class="form-control" asp-items="ViewBag.Id_Rubro"></select>
            </div>
            <div class="form-group">
                <label asp-for="Precio.Precio" class="control-label"></label>
                <input asp-for="Precio.Precio" class="form-control" data-val="false" />
                <span asp-validation-for="Precio.Precio" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#categoriasModal">
                    Seleccionar Categorías
                </button>

                @Html.Partial("_ArticulosCategoriasPartial", Model)

            </div>
            <br />
            <div>
                <div id="dropzone" class="dropzone">
                    Arrastra y suelta la imagen aquí o haz clic para seleccionar.
                </div>
                <input type="file" id="fileInput" name="Imagen" class="form-control-file" hidden />
                <div id="previewContainer" class="preview-container"></div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/articulos/cargarimagen.js"></script>
    <script src="~/js/articulos/searchcategoriasinmodal.js"></script>
}
